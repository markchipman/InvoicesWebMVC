@model List<WebInvoicesMVC.Models.InvoiceProductViewModel>

@if (Model != null)
{

  <table class="table">
    <tr>      
      <th>
        @Html.DisplayNameFor(model => model[0].ProductName)
      </th>
      <th>
        @Html.DisplayNameFor(model => model[0].Price)
      </th>
      <th>
        @Html.DisplayNameFor(model => model[0].Quantity)
      </th>
      <th>
        @Html.DisplayNameFor(model => model[0].TotalAmmount)
      </th>
      <th></th>
    </tr>

    @foreach (var product in Model)
    {
      <tr>
        <td>          
          @Html.DisplayFor(model => product.ProductName, new {htmlAttributes = new {@class = "form-control"}})
        </td>
        <td>
          @Html.DisplayFor(model => product.Price, new {htmlAttributes = new {@class = "form-control"}})
        </td>
        <td>
          @Html.TextBoxFor(model => product.Quantity, new { @class ="form-control"})
        </td>
        <td>
          @Html.DisplayFor(model => product.TotalAmmount, new {htmlAttributes = new {@class = "form-control"}})
        </td>
        <th>
          <button class="form-control updateProductBtnAjax" data-id="@product.InvoiceProductId" style="background-color: #dddddd">Update</button>
        </th>        
      </tr>
    }
  </table>
}

<script>
  var jsModel = @Html.Raw(Json.Encode(Model));
</script>
